{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "../dist",
    "rootDir": "..",
    "allowJs": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["../*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../hooks/**/*.ts"
  ]
}
